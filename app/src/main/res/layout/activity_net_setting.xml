<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goke.settings.netSettingActivity"
    android:background="@drawable/colorbackground1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MainActivityTitleIcon"
        android:background="@drawable/ic_settings"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="5%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MainActivityTitleText"
        android:layout_toRightOf="@id/MainActivityTitleIcon"
        android:layout_alignBottom="@id/MainActivityTitleIcon"
        android:text="@string/settings"
        android:textColor="@color/white"
        app:layout_marginLeftPercent="1%"
        android:includeFontPadding="false"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NetActivityTitleArrow"
        android:layout_toRightOf="@id/MainActivityTitleText"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="1%"
        android:background="@drawable/ic_rightarrow"
        />

    <ImageView
        android:layout_width="match_parent"
        app:layout_heightPercent="0.2%"
        android:background="@color/white"
        android:layout_below="@id/MainActivityTitleIcon"
        app:layout_marginTopPercent="0.5%"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/netFlowOpen"
        android:focusable="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/netFlowOpen"
        android:layout_alignBottom="@id/netFlowOpen"
        android:id="@+id/netFlowClose"
        android:focusable="true"/>
</android.support.percent.PercentRelativeLayout>
